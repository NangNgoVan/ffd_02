<%= render "layouts/header" %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag "", class: "img-rounded product-avatar" %>
        </div>
        <div class="col-md-8">
          <dl>
            <dt>
              <h2><%= @product.name %></h2>
            </dt>
            <dd>
              <%= @product.description %>
            </dd>
            <dt>
              <h4><%= t "giaban" %></h4>
            </dt>
            <dd>
              <h4><%= @product.price %> VND</h4>
            </dd>
          </dl>
          <button type="button" class="btn btn-lg btn-primary">
            <%= t "themgiohang" %>
          </button>
          <div class="row" style="margin-top: 10px;">
            <%= render "comments/comment_form", product: @product %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>
